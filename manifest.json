{
  "name": "Format Link",
  "version": "5.0.0",
  "manifest_version": 3,
  "description": "Format a link and copy it to the clipboard.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "tabs"
  ]
}
